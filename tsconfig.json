{
  "compilerOptions": {
    "paths": {
      "~shared/*": ["./src/shared/*"],
      "~webview/*": ["./src/webview/*"],
      "~extension/*": ["./src/extension/*"]
    },
    "strict": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist/types",
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "exclude": ["node_modules/**/*"]
}
